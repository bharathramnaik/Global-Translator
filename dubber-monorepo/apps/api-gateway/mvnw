# Maven wrapper script for Unix-like systems

MAVEN_PROJECTBASEDIR=${MAVEN_BASEDIR:-"$(cd -- "$(dirname -- "$0")" > /dev/null && pwd)"}
export MAVEN_PROJECTBASEDIR

MAVEN_VERSION="${MAVEN_VERSION:-3.8.1}"
MAVEN_URL="https://archive.apache.org/dist/maven/maven-3/${MAVEN_VERSION}/binaries/apache-maven-${MAVEN_VERSION}-bin.zip"

MAVEN_HOME="${MAVEN_HOME:-.mvn/wrapper/maven}"

[ ! -d "$MAVEN_HOME" ] && mkdir -p "$MAVEN_HOME"

if [ ! -f "$MAVEN_HOME/bin/mvn" ]; then
  echo "Downloading Maven ${MAVEN_VERSION}..."
  cd "$MAVEN_HOME" || exit
  curl -L "$MAVEN_URL" -o maven.zip
  unzip -q maven.zip
  rm maven.zip
  mv apache-maven-${MAVEN_VERSION}/* .
  rmdir apache-maven-${MAVEN_VERSION}
  cd - || exit
fi

exec "$MAVEN_HOME/bin/mvn" "$@"
